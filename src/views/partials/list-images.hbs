<h2 class="title is-3 has-text-centered">Images</h2>
<div class="columns is-multiline">
  {{#each location.images}}
    <div class="column is-half">
      <div class="card mb-3">
        <div class="card-header">
          <p class="card-header-title">{{title}}</p>
        </div>
        <div class="card-image">
          <figure class="image">
            <img src="{{imageUrl}}" alt="{{title}}">
          </figure>
        </div>
        <div class="card-content">
          <p>{{description}}</p>
        </div>
        <footer class="card-footer">
          <a href="/location/{{../location._id}}/deleteimage/{{_id}}" class="card-footer-item">
            <span class="icon">
              <i class="fas fa-trash"></i>
            </span>
            <span>Delete</span>
          </a>
        </footer>
      </div>
    </div>
  {{/each}}
</div>